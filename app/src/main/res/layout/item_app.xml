<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="app"
            type="com.ami.batterwatcher.viewmodels.AppModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_11sdp"
        android:paddingTop="@dimen/_11sdp"
        android:paddingEnd="@dimen/_11sdp"
        android:paddingBottom="@dimen/_11sdp">

        <ImageView
            android:id="@+id/imageView_appIcon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_tracki_launcher_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.ami.batterwatcher.ui.CustomTvLight
            android:id="@+id/textView_appName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_11sdp"
            android:paddingLeft="@dimen/_11sdp"
            android:text="@{app.appName}"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/imageView_add"
            app:layout_constraintStart_toEndOf="@+id/imageView_appIcon"
            app:layout_constraintTop_toTopOf="@+id/imageView_appIcon"
            tools:text="Skype" />

        <com.ami.batterwatcher.ui.CustomTvLight
            android:id="@+id/textView_appPackageName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_11sdp"
            android:paddingLeft="@dimen/_11sdp"
            android:text="@{app.packageName}"
            android:textColor="@color/dark_gray"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_appIcon"
            app:layout_constraintEnd_toEndOf="@+id/textView_appName"
            app:layout_constraintStart_toEndOf="@+id/imageView_appIcon"
            app:layout_constraintTop_toBottomOf="@+id/textView_appName"
            tools:text="com.skype.raider" />

        <ImageView
            android:id="@+id/imageView_add"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_baseline_add_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>