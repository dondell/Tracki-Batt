<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_rectangle_white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circular_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/circle_blue"
                android:src="@drawable/ic_device"
                app:civ_border_color="@color/dark_gray"
                app:civ_border_width="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.ami.batterwatcher.ui.CustomBoldTV
                android:id="@+id/textView_text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:background="@color/transparent"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:lines="2"
                android:maxLines="2"
                android:singleLine="false"
                android:text="Buy Tracki #1 best selling GPS tracker on Amazon"
                android:textColor="@color/red"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView_text2"
                app:layout_constraintEnd_toStartOf="@+id/imageView_icon2"
                app:layout_constraintLeft_toRightOf="@+id/circular_icon"
                app:layout_constraintStart_toEndOf="@+id/circular_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:src="@drawable/ic_baseline_alarm_off_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/textView_text1"
                app:layout_constraintStart_toEndOf="@+id/textView_text1"
                app:layout_constraintTop_toTopOf="@+id/textView_text1"
                app:tint="@color/black" />

            <com.ami.batterwatcher.ui.CustomBoldTV
                android:id="@+id/textView_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@color/transparent"
                android:singleLine="false"
                android:text="&lt;="
                android:textColor="@color/orange"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/textView_text3"
                app:layout_constraintLeft_toRightOf="@+id/circular_icon"
                app:layout_constraintTop_toBottomOf="@+id/textView_text1" />

            <com.ami.batterwatcher.ui.CustomTvLight
                android:id="@+id/textView_disChargingPercentages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:background="@color/transparent"
                android:text="Click here"
                android:textColor="@color/blue_200"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/textView_text3"
                app:layout_constraintEnd_toStartOf="@+id/imageView_edit"
                app:layout_constraintLeft_toRightOf="@+id/circular_icon"
                app:layout_constraintStart_toEndOf="@+id/textView_text2"
                app:layout_constraintTop_toBottomOf="@+id/textView_text1"
                app:layout_constraintVertical_bias="0.6" />

            <com.ami.batterwatcher.ui.CustomTvLight
                android:id="@+id/textView_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@color/transparent"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/circular_icon"
                app:layout_constraintTop_toBottomOf="@+id/textView_text2"
                tools:text="" />

            <ImageView
                android:id="@+id/imageView_edit"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_baseline_edit_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView_icon2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.571"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/imageView_icon2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/transparent"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_baseline_settings_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/dark_gray" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>