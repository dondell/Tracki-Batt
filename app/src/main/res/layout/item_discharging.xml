<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.ami.batterwatcher.viewmodels.AlertModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_rectangle_white">

            <ImageView
                android:id="@+id/imageView_icon1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/circle_blue"
                android:padding="@dimen/_6sdp"
                android:src="@{item.event == 1 ? @drawable/ic_baseline_play_arrow_24: item.event == 2 ? @drawable/ic_baseline_music_note_24 : @drawable/ic_baseline_surround_sound_24}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_baseline_surround_sound_24" />

            <com.ami.batterwatcher.ui.CustomBoldTV
                android:id="@+id/textView_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@color/transparent"
                android:text="Discharging alerts"
                android:textColor="@color/orange"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView_text2"
                app:layout_constraintLeft_toRightOf="@+id/imageView_icon1"
                app:layout_constraintTop_toTopOf="parent" />

            <com.ami.batterwatcher.ui.CustomBoldTV
                android:id="@+id/textView_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@color/transparent"
                android:singleLine="false"
                android:text="&lt;="
                android:textColor="@color/orange"
                app:layout_constraintBottom_toTopOf="@+id/textView_text3"
                app:layout_constraintLeft_toRightOf="@+id/imageView_icon1"
                app:layout_constraintTop_toBottomOf="@+id/textView_text1" />

            <com.ami.batterwatcher.ui.CustomTvLight
                android:id="@+id/textView_disChargingPercentages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:background="@color/transparent"
                android:text="@{item.eventString}"
                android:textColor="@color/orange"
                app:layout_constraintBottom_toTopOf="@+id/textView_text3"
                app:layout_constraintEnd_toStartOf="@+id/imageView_edit"
                app:layout_constraintLeft_toRightOf="@+id/imageView_icon1"
                app:layout_constraintStart_toEndOf="@+id/textView_text2"
                app:layout_constraintTop_toBottomOf="@+id/textView_text1"
                app:layout_constraintVertical_bias="0.6"
                tools:text="xxx" />

            <com.ami.batterwatcher.ui.CustomTvLight
                android:id="@+id/textView_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:visibility="gone"
                android:background="@color/transparent"
                android:text="@{item.description}"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imageView_icon1"
                app:layout_constraintTop_toBottomOf="@+id/textView_text2"
                tools:text="Bat 94 level" />

            <ImageView
                android:id="@+id/imageView_edit"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_baseline_edit_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView_icon2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.571"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/imageView_icon2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/circle_green"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_baseline_battery_charging_not_full2_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>